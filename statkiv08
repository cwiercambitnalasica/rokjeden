	<body>
	<p>Rebeliancką marynarke stać tylko na troche pocisków do działa, ustrzel wszystkie pontony, łodzie i gwiazdy śmierci, wersja wczesnego dostępu</p>
	Obecny stan pocisków:
	<div id="amunicja">Obecny stan pocisków:</div>
	<div id="pontony">Obecny stan pontonów:</div>
	<div id="disclaimer"><b>EA - Czym jest early access?<br></b><br>W zasadzie sprowadza to do tego że sprzedajemy ci niedokończony produkt za cene pełnego i nigdy go nie dokańczamy, a teraz idź pisać swoje śmiesznes recenzje na steamie </div>
	<div id="plansza">
	</div>
	<script type="text/javascript">	
var rzad = 10;
var kolumna = 10;
var wielkosc = 50;
var planszaopakowana = document.getElementById("plansza");
for (i = 0; i < kolumna; i++) {
	for (j = 0; j < rzad; j++) {	
		// każde pole to div
		var kwadrat = document.createElement("div");
		planszaopakowana.appendChild(kwadrat);
    // id każego pola
		kwadrat.id = 's' + j + i;			
		// pozycja każdego pola
		var topPosition = j * wielkosc;
		var leftPosition = i * wielkosc;					
		// absolutne pozycjonowanie w css które wcale mnie nie denerwuje
		kwadrat.style.top = topPosition + 'px';
		kwadrat.style.left = leftPosition + 'px';						
	}
}
//var ammo=50;
document.getElementById("amunicja").innerHTML =ammo;
var trafienia = 0;
					var plansza=new Array(kolumna);
					for(var x=0;x<plansza.length; x++){
					plansza[x]=new Array(rzad);
					}
				for (var k=0;k<kolumna;k++){
				for(var l=0;l<rzad;l++){
				plansza[k][l]=0;
				}
				}
var ammo=30	;
document.getElementById("amunicja").innerHTML =ammo;
var pontony=10;
document.getElementById("pontony").innerHTML =pontony;
planszaopakowana.addEventListener("click", ustawienie, false);
function ustawienie(e) {
	if(pontony>0){
	if (e.target !== e.currentTarget) {
		var row = e.target.id.substring(1,2);
		var col = e.target.id.substring(2,3);			
		if (plansza[row][col] == 0) {
			plansza[row][col] = 1;
			pontony--;
			document.getElementById("pontony").innerHTML =pontony;
		} else if (plansza[row][col] == 1) {
			plansza[row][col] = 1;
			alert("Tu już jest statkoponton");
			document.getElementById("pontony").innerHTML =pontony;
			}
		}		
    }
else{
    e.stopPropagation();
	return ;
	}
}		
planszaopakowana.addEventListener("click", pifpafstrzal, false);
function pifpafstrzal(e) {
	if(ammo>0 && pontony==0){
	if (e.target !== e.currentTarget) {
        // wyciąganie id
		var row = e.target.id.substring(1,2);
		var col = e.target.id.substring(2,3);			
		// Pudło
		if (plansza[row][col] == 0) {
			e.target.style.background = '#bbb';
			plansza[row][col] = 3;
			ammo--;
			document.getElementById("amunicja").innerHTML =ammo;
		} else if (plansza[row][col] == 1) {
			e.target.style.background = 'red';
			// Trafiony statek
			plansza[row][col] = 2;
			ammo--;
			document.getElementById("amunicja").innerHTML =ammo;
			// Trafienia i warunek wygranej
			trafienia++;
			if (trafienia == 10) {
				alert("Udało się brawo, galaktyka jest bezpieczna aż do następnej trylogii");
				 e.stopPropagation();
				 return;
			}
			if (ammo == 0){
			alert("Ajj karamba skończyła się amunicja, imperium zwyciężyło");
			}	
		} else if (plansza[row][col] > 1) {
			alert("Strzelałeś tu już uspokój się nie ma tam nic naprawdę");
			ammo--;
			document.getElementById("amunicja").innerHTML =ammo;
		}		
    }
}
else if(ammo<=0 && pontony==0){
alert("Psik koniec amunicji");
    e.stopPropagation();
	}
}

	</script>
